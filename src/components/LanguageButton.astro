---
const { pathname } = Astro.url;

interface Props {
  id: string;
  language: string;
}

const { language, id } = Astro.props;

console.log(pathname);

let languagePath = "";
if (language.toLowerCase() === "en") {
  languagePath = "/";
} else {
  languagePath = `/${language.toLowerCase()}`;
}
---

<a
  id=`${id}`
  href=`${languagePath}`
  lang={language.toLowerCase()}
  hreflang={language.toLowerCase()}
  class="text-white">{language}</a
>

<script define:vars={{ id }}>
  const languajeButton = document.getElementById(id);
