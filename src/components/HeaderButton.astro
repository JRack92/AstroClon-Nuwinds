---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a
  class="flex-row text-base justify-center text-white cursor-pointer cs-primary_font font-medium px-5 py-2.5 text-center inline-flex items-center transition-all duration-200 ease-in-out hover:scale-110 scale-100 gap-x-2"
  href={href}
>
  <slot name="before" />
  <slot />
  <slot name="after" />
</a>
